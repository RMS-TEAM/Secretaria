<div class="tabla_ranking">
<script src="http://cdn.printfriendly.com/printfriendly.js" type="text/javascript"></script>
  <a href="http://www.printfriendly.com" style=" color:#6D9F00; text-decoration:none;" class="printfriendly" onclick="window.print(); return false;" title="Printer Friendly and PDF">
    <img style="border:none;" src="http://cdn.printfriendly.com/button-print-gry20.png" alt="Print Friendly and PDF"/>
  </a>

    <table class="tabla_ran" >
     <tr class="titulo">
       <td>Puesto</td>
       <td>Nombre</td>
       <td>Ambiente Escolar</td>
       <td>Rendimiento</td>
       <td>Progreso</td>
       <td>Total</td>
     </tr>
    <% contador = 1 %>
    <% @ranking.each do |ins| %>

       <tr class="<%= cycle("even", "odd") %>">
         <td>  <%= contador  %></td>
         <td>  <%= ins.nombre.downcase.titleize%>        </td>
         <td>  <%= ins.ambiente_escolar%> </td>
         <td>  <%= ins.rendimiento%>      </td>
         <td>  <%= ins.progreso%>         </td>
         <td>  <%= ins.indicador%>        </td>
       </tr>


    <%
       contador = contador + 1
       end
    %>

    </table>

</div>