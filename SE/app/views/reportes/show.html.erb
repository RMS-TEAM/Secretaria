                        <tr class="titulo">
                                <td colspan="2">Este reporte es para:</td>
                        </tr>
                        <tr>
                                <td colspan="2" > <%= @rendimientos.nombre.titleize%>.</td>
                        </tr>
                        <tr>
                                <td colspan="2"><strong>Codigo DANE:</strong> <%= @rendimientos.dane %></td>
                        </tr>
