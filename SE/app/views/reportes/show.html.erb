                                <td class="puntaje"><strong><%= grade_ambiente(@multivariados.AmbienteEscolar1) %></strong></td>
                        </tr>
                        <tr>
                                <td>Rendimiento Académico</td>
                                <td class="puntaje" style="padding-left: 0; text-align: center"><strong><%=@multivariados.Rendimiento1.round(2)%> de 38</strong></td>
                                <td width="2%"> 0% </td>
                                <td class="puntaje"><div class="grafico"><strong class="barra" style="width: <%=percent(@multivariados.Rendimiento1.round(2),37)%>%;"><%=percent(@multivariados.Rendimiento1.round(2),37)%>%</strong></div></td>
                                <td width="2%">100%</td>
                                <td class="puntaje"><strong><%= grade_rendimiento(@multivariados.Rendimiento1) %></strong></td>
                        </tr>
                        <tr>
                                <td>Progreso Académico</td>
                                <td class="puntaje" style="padding-left: 0; text-align: center"><strong><%=@multivariados.Progreso1.round(2)%> de 36</strong></td>
