                <table style="width: 100%;"  border=1 cellspacing=0 cellpadding=2 >
                        <tr class="titulo" style="text-align: center">
                                <th colspan="6">Detalle de la puntuación por dimensión</th>
                        </tr>
                        <tr>
                                <th style="width: 20%">Dimensión</th>
                                <th style="width: 50%" colspan="4">Puntaje</th>
                                <th style="width: 20%">Calificaci&oacute;n</th>
                        </tr>
                        <tr>
                                <td>Ambiente Escolar</td>
                                <td width="10%" class="puntaje" style="padding-left: 0; text-align: center"><strong><%=@multivariados.AmbienteEscolar1.round(2) %> de 26</strong></td>
                                <td width="2%"> 0% </td>
                                <td class="puntaje"><div class="grafico"><strong class="barra" style="width: <%=percent(@multivariados.AmbienteEscolar1.round(2),26) %>%;"> <%=  percent(@multivariados.AmbienteEscolar1.round(2),26) %>%</strong></div></td>
