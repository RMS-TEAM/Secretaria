                                       <td width="20%">
                                          <%= nombre_comp(par.colegio.titleize) %>
                                       </td>
                                          <% iter = iter.next %>
                                    <% end %>
                              <% if iter == 5  %>
                                 </tr>
                                  <% iter = 0 %>
                              <% end %>
                        <% end %>


