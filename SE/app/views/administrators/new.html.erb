<h1>Nuevo Usuario</h1>

<%= form_for(@mateo) do |f| %>
                <div class="field">
                    <%= f.label :nombre %> <br />
                    <%= f.text_field :nombre %>
                </div>
                <div class="field">
                    <%= f.label :email %> <br />
                    <%= f.text_field :email %>
                </div>
                <div class="field">
                    <%= f.label :admin, "Tipo de usuario" %> <br />
                    <%= f.text_field :admin %>
                </div>
                <div class="field">
                    <%= f.label :password, "Contraseña" %> <br />
                    <%= f.password_field :password %>
                </div>
                <div class="field">
                    <%= f.label :password_confirmation, "Confirme la contraseña" %> <br />
                    <%= f.password_field :password_confirmation %>
                </div>
                <div class="actions">
                        <%= f.submit "Create"%> <br />
                </div>
            <%end%>
<%= button_to 'Atras', :action => 'index' %>
