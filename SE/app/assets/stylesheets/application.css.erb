body{
    background-image: url(<%= asset_path 'fondo.gif'%>);
    margin: 0%;


}

#header{
	//background-color: white;
	min-height: 100px;
    margin-left: auto;
    margin-right: auto;
	-webkit-border-radius: 0px 0px 12px 12px;
    border-radius:  0px 0px 12px 12px;
	width: 80%;
    border: 1px solid  #dcdcdc;

}

#header #nav .name {
    width: 50%;
    float: left;
    padding: 0 0.7em;
    white-space: nowrap;
	padding-left: 20px;

}

#header #nav .name img{
	width: 100%;
    height: 97px;
}

#header #nav .bar   {
	border-bottom-left-radius: 12px;
	border-bottom-right-radius: 12px;
	-webkit-box-shadow: 0px 1px 3px rgba(0, 0, 0.05);
	box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.5);
	margin-right: 45px;
	background-color: #f5f5f5;
	height:30px;
	float: right;
	line-height: 1em;
	padding-bottom: 8px;
}

#header #nav .bar ul li{
	list-style-type: none;
    	display: inline-block;
    	padding: 0 0.1em;

}

#header #nav .bar ul li a {
	padding: 0 5px;
	font-size: 14.5px;
}

#header #nav ul {
	margin: 15px;
	padding: 0;
}


#header #nav .bar ul li a:visited {
	color: #036163;
}

#header #nav .bar ul li a:hover {
	color: #036163;
	text-decoration: underline;
}


a{
    	color: #036163;
    	text-decoration: none;
}
a:hover{
    cursor: pointer;
}

#content{
	//background-color:  white;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 20px;
	margin-top: 20pt;
    -webkit-border-radius: 12px;
    -moz-border-radius: 12px;
	border-radius: 12px;
	width: 80%;
    border: 1px solid  #dcdcdc;

}
#big{
    	padding: 10px 30px 50px 30px;
}

#content a.option_button{
    margin-top: 10px  ;
	display: block;
	text-align: center;
	width: 16%;
	color: #036163;
	background: whiteSmoke;
	font-size: 100%;
	font-weight: bold;
	padding: 20px;
    float: left;
    border-radius: 12px;
    -webkit-border-radius: 12px;
    -moz-border-radius: 12px;
    margin-right: 10px;
    padding-top: 5px;
    padding-bottom: 5px;
    -webkit-box-shadow: 0px 1px 3px rgba(0, 0,0, 0.05);
	box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.5);
}


#content button.option_button{
    margin-top: 10px;
	width: 16%;
	color: #036163;
	background: whiteSmoke;
	font-size: 100%;
	font-weight: bold;;
